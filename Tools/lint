# setup
set -euf
cd "$(dirname "${0}")/.."

# Swift
if command -v swiftlint >/dev/null 2>&1; then
    swiftlint lint 2>/dev/null
else
    printf "%s\n" "warning: swiftlint not found. (tool_not_found)"
fi
